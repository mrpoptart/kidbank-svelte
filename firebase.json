{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": "9099"
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": "8000"
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": "4000"
    },
    "hub": {
      "host": "127.0.0.1",
      "port": "4400"
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
